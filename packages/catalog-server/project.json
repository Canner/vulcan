{
  "name": "catalog-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/catalog-server",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/catalog-server"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "catalog-server:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "catalog-server:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "catalog-server:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "catalog-server:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/catalog-server"
      ],
      "options": {
        "jestConfig": "packages/catalog-server/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../tools/scripts/publish.mjs {args.tag} {args.version}",
        "cwd": "dist/packages/catalog-server"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "build:docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../tools/scripts/buildDocker.mjs {args.tag} {args.version}",
        "cwd": "dist/packages/catalog-server"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "publish:docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../tools/scripts/publishDocker.mjs {args.tag} {args.version}",
        "cwd": "dist/packages/catalog-server"
      },
      "dependsOn": [
        {
          "target": "build:docker"
        }
      ]
    },
    "generate-gql": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn graphql-codegen --config packages/catalog-server/codegen.yml"
        ]
      }
    }
  },
  "tags": []
}
